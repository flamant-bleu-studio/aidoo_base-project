<?xml version="1.0" encoding="UTF-8"?>
<contact_type>
	<name>information</name>
	<description>Formulaire selectup</description>
	<page>true</page>
	<bloc>true</bloc>
	<templates>
		<template name="Formulaire selectup information" file="contact_info" />
	</templates>
	
	<nodes>
		<elements>
		
			<civilite>
				<type>select</type>
				<options>
					<label>Civilité : </label>
					<description>Civilité</description>
					<width>100</width>
					<required>true</required>
					<multioptions>
						<Monsieur>Monsieur</Monsieur>
						<Madame>Madame</Madame>
						<Mademoiselle>Mademoiselle</Mademoiselle>
						<MrMme>M et Mme</MrMme>
						<MrMelle>M et Melle</MrMelle>
					</multioptions>
				</options>
			</civilite>
			
			<nom>
				<type>text</type>
				<options>
					<label>Nom : </label>
					<description>Votre nom</description>
					<width>100</width>
					<required>true</required>
				</options>
			</nom>
			
			<prenom>
				<type>text</type>
				<options>
					<label>Prénom : </label>
					<description>Votre prénom</description>
					<width>100</width>
					<required>true</required>
				</options>
			</prenom>
			
			<adresse>
				<type>text</type>
				<options>
					<label>Adresse : </label>
					<description>Votre Adresse</description>
					<width>100</width>
					<required>true</required>
				</options>
			</adresse>
			
			<codeposte>
				<type>text</type>
				<options>
					<label>Code postal : </label>
					<description>Votre code postal</description>
					<width>100</width>
					<required>true</required>
				</options>
			</codeposte>
			
			<ville>
				<type>text</type>
				<options>
					<label>Ville : </label>
					<description>Votre ville</description>
					<width>100</width>
					<required>true</required>
				</options>
			</ville>
			
			<telephone>
				<type>text</type>
				<options>
					<label>Téléphone : </label>
					<description>Votre téléphone</description>
					<width>20</width>
					<required>false</required>
					<validators>
						<phone>
							<validator>phone</validator>
						</phone>
					</validators>
				</options>
			</telephone>
			
			<email>
				<type>text</type>
				<options>
					<label>Email : </label>
					<description>Votre email</description>
					<width>100</width>
					<required>true</required>
					<validators>
						<email>
							<validator>EmailAddress</validator>
						</email>
					</validators>
				</options>
			</email>
			
			<mess>
				<type>textarea</type>
				<options>
					<label>Message : </label>
					<required>true</required>
				</options>
			</mess>
			
			<idcar>
				<type>hidden</type>
				<options>
					<required>true</required>
				</options>
			</idcar>
			
			<ref_dms><type>hidden</type></ref_dms>
			<vehicule_marque><type>hidden</type></vehicule_marque>
			<vehicule_modele><type>hidden</type></vehicule_modele>
			<concession_desc><type>hidden</type></concession_desc>
			<concession_adresse3><type>hidden</type></concession_adresse3>
			
		</elements>
	</nodes>
		
</contact_type>